<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <!-- Ensure the installer/uninstaller scripts are always included -->
    <None Include="install-startup.ps1" CopyToOutputDirectory="Always" CopyToPublishDirectory="Always" />
    <None Include="uninstall-startup.ps1" CopyToOutputDirectory="Always" CopyToPublishDirectory="Always" />
  </ItemGroup>

</Project>
